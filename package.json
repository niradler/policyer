{
  "name": "policyer",
  "version": "0.0.24",
  "description": "Create a check system in an extendable way, create a provider to feed the checks with data, checks can be written in json or yml format.",
  "bin": {
    "policyer": "lib/policyer.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src && npm version minor",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json --fix",
    "test-ts": "jest --config jestconfig.json",
    "prepare": "husky install && npm run build",
    "test": "jest"
  },
  "keywords": [
    "policy",
    "checks",
    "tests",
    "scanner"
  ],
  "author": "Nir Adler",
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.5.0",
    "@types/jest": "^26.0.22",
    "@types/jmespath": "^0.15.0",
    "@types/lodash": "^4.14.168",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "figlet": "^1.5.0",
    "jmespath": "^0.15.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "yaml": "^1.10.2",
    "yargs": "^16.2.0"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niradler/policyer.git"
  },
  "bugs": {
    "url": "https://github.com/niradler/policyer/issues"
  },
  "homepage": "https://github.com/niradler/policyer#readme"
}
